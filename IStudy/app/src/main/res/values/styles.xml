<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AnimationFade_right">
        <!-- PopupWindow右弹出的效果 -->
        <item name="android:windowEnterAnimation">@anim/right_pop_input</item>
        <item name="android:windowExitAnimation">@anim/right_pop_output</item>
    </style>

    <style name="dialogWindowAnim" parent="android:Animation" mce_bogus="1">
        <!--计划弹出框动画-->
        <item name="android:windowEnterAnimation">@anim/left_pop_input</item>
        <item name="android:windowExitAnimation">@anim/left_pop_output</item>
    </style>
</resources>
